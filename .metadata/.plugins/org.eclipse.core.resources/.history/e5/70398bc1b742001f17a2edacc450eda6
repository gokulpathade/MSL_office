package com.vm.model;



import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;

@Entity
public class Email {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;
    private String toEmail;
    private String subject;
    private String body;

    public Email() {
    }

    public Email(String toEmail, String subject, String body) {
        this.toEmail = toEmail;
        this.subject = subject;
        this.body = body;
    }

    // Getters and Setters
    public Long getId() {
        return id;
    }

    public void setId(Long id) {
        this.id = id;
    }

    public String getToEmail() {
        return toEmail;
    }

    public void setToEmail(String toEmail) {
        this.toEmail = toEmail;
    }

    public String getSubject() {
        return subject;
    }

    public void setSubject(String subject) {
        this.subject = subject;
    }

    public String getBody() {
        return body;
    }

        /**
     * Sets the body of the Email object.
     *
     * @param  body   the new body of the Email
     */
    public void setBody(String body) {
        this.body = body;
    }


        /**
     * Returns a string representation of the Email object.
     *
     * @return a string representation of the Email object
     */
    @Override
    public String toString() {
        return "Email [id=" + id + ", toEmail=" + toEmail + ", subject=" + subject + ", body=" + body + "]";
    }
}
